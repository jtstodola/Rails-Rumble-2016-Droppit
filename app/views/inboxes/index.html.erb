<h1>Listing Inboxes</h1>

<%= button_to 'New Inbox', new_inbox_path, method: :get, class: :inbox_btn %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Remote folder</th>
      <th>Service</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inboxes.each do |inbox| %>
      <tr>
        <td><%= inbox.name %></td>
        <td><%= inbox.remote_folder %></td>
        <td><%= inbox.service.capitalize %></td>
        <td>
          <% path = public_inbox_url(inbox.slug) %>
          <%= link_to path, path %>
        </td>
        <td><%= link_to 'Show', inbox %></td>
        <td><%= link_to 'Edit', edit_inbox_path(inbox) %></td>
        <td><%= link_to 'Destroy', inbox, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>